@using Microsoft.AspNetCore.Identity
@using Music.Areas.Identity.Data

@inject SignInManager<MusicUser> SignInManager
@inject UserManager<MusicUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link btn text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        @*<a class="nav-link btn text-light" asp-controller="Users" asp-action="Profile" asp-route-id="@UserManager.GetUserId(User)">@UserManager.GetUserName(User)</a>*@
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-outline-primary text-light">
                <i class="fas fa-sign-out-alt"></i> &nbsp; Sing Out
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light btn btn-outline-primary" id="login" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt"></i> &nbsp; Sing In
        </a>
    </li>
}
</ul>
