
@model Music.ViewModels.SendEmailViewModel;

<br />

<form method="post" asp-action="SendEmail">
    <div class="p-3 bg-dark text-light">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-light pl-3">Compose</h2>
            <input type="hidden" asp-for="RecepientId"/>
            <input type="hidden" asp-for="EmailFrom"/>
            <input type="hidden" asp-for="EmailTo"/>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row py-2">
                    <div class="col-2">
                        <label asp-for="EmailFrom"></label>
                    </div>
                    <div class="col-10">
                        <input value="@Model.EmailFrom" class="form-control bg-dark text-secondary" disabled/>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-2">
                        <label asp-for="EmailTo"></label>
                    </div>
                    <div class="col-10">
                        <input value="@Model.EmailTo" class="form-control bg-dark text-secondary" disabled />
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-2">
                        <label asp-for="Subject"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Subject" class="form-control bg-dark text-light" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-2">
                        <label asp-for="Body"></label>
                    </div>
                    <div class="col-10">
                        @*<input asp-for="Body" class="form-control bg-dark text-light" />*@
                        <textarea asp-for="Body" class="form-control bg-dark text-light" placeholder="Say something..." 
                                  rows="10"></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="fas fa-paper-plane"></i> &nbsp; Send
                            </button>
                        </div>
                        <div class="col">
                            <a asp-action="Profile" asp-route-id="@Model.RecepientId" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-backward"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}