@model Music.Models.Song

<form method="post" asp-action="Add">
    <div class="p-3 bg-dark text-light">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-light pl-3">Add Song</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" class="form-control bg-dark text-light" id="title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Artist"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Artist" class="form-control bg-dark text-light" id="artist" />
                        <span asp-validation-for="Artist" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category" class="form-control bg-dark text-light" id="category" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="YearPublished"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="YearPublished" class="form-control bg-dark text-light" id="year_published" />
                        <span asp-validation-for="YearPublished" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Link"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Link" class="form-control bg-dark text-light" id="year_published" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button type="submit" id="add_btn" class="btn btn-outline-primary w-100">
                                <i class="fas fa-plus"></i> &nbsp; Add
                            </button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-backward"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script src="~/js/addSong.js"></script>
}